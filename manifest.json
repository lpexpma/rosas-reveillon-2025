  "related_applications": [],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+rosas",
      "url": "/?party=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "Rosas - Rejoins ma soirée",
      "text": "Je t'invite à rejoindre ma soirée Rosas ! Code: %s",
      "url": "/?party=%s",
      "files": [
        {
          "name": "photo",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/import-backup",
      "accept": {
        "application/json": [".json"]
      },
      "name": "Backup Rosas"
    }
  ],
  
  "id": "/?v=2.0",
  "version": "2.0.0",
  
  "permissions": [
    "camera",
    "clipboard-write",
    "notifications",
    "storage",
    "vibration"
  ],
  
  "serviceworker": {
    "src": "sw.js",
    "scope": "/",
    "type": "module"
  },
  
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "Offline Capable",
    "Multiplayer",
    "Real-time Sync"
  ],
  
  "splash_pages": null,
  
  "developer": {
    "name": "Laurent Rosas",
    "url": "https://rosas-reveillon-2025.web.app"
  },
  
  "iarc_rating_id": "e10b8d1a-1234-5678-90ab-cdef01234567",
  
  "background": {
    "scripts": ["js/sw-background.js"],
    "type": "module"
  },
  
  "prevent_default": true,
  
  "capture_links": "existing-client-navigate"
}